source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.8'
gem 'pg'
gem 'devise'
gem 'sass-rails', '~> 4.0.2'
gem 'bootstrap-sass'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'


gem 'omniauth'
gem 'omniauth-facebook'

gem 'figaro'


group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'rspec-its'
  gem 'faker', '1.4.3'
end

group :development do
  gem 'guard'
  gem 'letter_opener'
end

group :test do
  gem 'guard-rspec' 
  gem 'launchy'
  gem 'capybara'
  gem 'guard-minitest'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :production do
  gem 'rails_12factor'
end


