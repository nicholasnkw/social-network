<section class="column-main">
  <div class="column-main-content">
    <h2>Sign up</h2>
    <% resource.build_profile %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <% if devise_mapping.omniauthable? %>
          <% resource_class.omniauth_providers.each do |provider| %> 
            <%= link_to "Sign up with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-large btn-lg btn-facebook" %><br />
          <% end %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>

      <%= f.fields_for :profile do |profile_form| %>
        <%= profile_form.hidden_field :first_name, :value => "" %>
        <%= profile_form.hidden_field :last_name, :value => "" %>
        <%= profile_form.hidden_field :blurb, :value => "" %>

       <% end %>

      <div class="actions">
        <%= f.submit "Sign up" %>
      <% end %>
        <%= render "devise/shared/links" %>
        </div>
  </div>
</section>
