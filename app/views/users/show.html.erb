
<section class="col-2-3">
  <h1><%= @profile.first_name %>&nbsp<%= @profile.last_name %></h1>
  <%= gravatar_for @user %>
  <h3><%= @profile.blurb %></h3>
</section>
<div class=" col-1-3 clearfix" > 
  <% if current_user == @user%>
    <h2>Pending Friends</h2>
    <ul>
      <% if @pending_friends %>
        <% @pending_friends_profiles.each do |p|%>
      <li><%= p.first_name %>&nbsp<%= p.last_name %></li>
      <%= link_to "Deny", friendship_path(@pending_friends.find_by(:friend_id => current_user.id, :user_id =>  p.user_id,).id), :method => :delete %>
        <% end %>
      
      <% end %>
    </ul>
  <% end %>
</div>