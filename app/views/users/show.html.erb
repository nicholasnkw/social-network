<section class="column-main">
  <aside class="sidebar">
    <h5>Friends</h5>
    <% @friends.each do |f| %>
    <% unless f.profile.photo.url == "/photos/original/missing.png" %>
      <%= image_tag f.profile.photo.url(thumb) %>
    <% else %>
      <%= gravatar_for(f, 50) %>
    <% end %>
      <%= f.profile.first_name %>
      <%= f.profile.last_name %>
    <% end %>
  </aside>
  <div class="column-main-content">
    <h1><%= @profile.first_name %>&nbsp<%= @profile.last_name %></h1>
    <% unless @profile.photo.url == "/photos/original/missing.png" %>
      <%= image_tag @profile.photo.url(:medium) %>
    <% else %>
      <%= gravatar_for(@user, 250) %>
    <% end %>

    <h4>"<%= @profile.blurb %>"</h4>
    <% if current_user == @user%>
      <%= link_to "edit profile", edit_user_profiles_path(current_user) %>
    <% end %>
  </div>
  <% if current_user == @user%>
     <div class="form-main-content">
       <%= form_for(@post) do |f| %>
         <%= f.text_area :description %>
         <%= f.submit "Post", :class => "btn-post" %>
       <% end %>   
    </div>
  <% end %>
</section>
      
<div class="post-wrapper"> 
  <% if @posts %>
    <%= render "shared/post", :posts => @posts %>
  <% end %>
</div>
