<section class="main">
  <div class="profile">
  <h1><%= @profile.first_name %>&nbsp<%= @profile.last_name %></h1>
  <%= gravatar_for(@user, 120) %>
  <h3><%= @profile.blurb %></h3>
  <% if current_user == @user%>
  <%= link_to "edit profile", edit_user_profiles_path(current_user) %>

  </div>
  <div>
    <%= form_for(@post) do |f| %>
    <%= f.text_area :description %>
    <%= f.submit "Post" %>
    <% end %>     
  </div>
  <% end %>
</section>
<div class="col-1-3"> 
  <% if @posts  %>
    <%= render "shared/post", :posts => @posts %>
  <% end %>
</div>