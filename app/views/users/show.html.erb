
<section class="col-2-3">
  <h1><%= @profile.first_name %>&nbsp<%= @profile.last_name %></h1>
  <%= gravatar_for @user %>
  <h3><%= @profile.blurb %></h3>
</section>
<div class=" col-1-3 clearfix" > 
  <% unless current_user == @user %>
    <% if current_user.pending_friends.include?(@user) %>
            <li>Pending</li>
    <% elsif current_user.friends.include?(@user) %>
          <li>Friend</li>
    <% else %>
  <%= form_for(current_user.friendship.build(friend_id: @user.id, status: "pending")) do |f| %>
      <%= f.submit "Add Friend" %>
      <% end %>    
    <% end %>
  <% end %>
</div>