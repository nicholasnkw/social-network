<section class="col-2-3">
  <div>
  <h1><%= @profile.first_name %>&nbsp<%= @profile.last_name %></h1>
  <%= gravatar_for @user %>
  <h3><%= @profile.blurb %></h3>
  <% if current_user == @user%>
  <%= link_to "edit profile", edit_user_profiles_path(current_user) %>

  </div>
  <div>
    <%= form_for(@post) do |f| %>
    <%= f.text_area :description, size: "60x12" %>
    <%= f.submit "Post" %>
    <% end %>     
  </div>
  <% end %>
    <h2>Friends</h2>
    <ul>
      <% if @friends %>
        <% @friends_profiles.each do |f| %>
          <li><%=link_to "#{f.first_name } #{f.last_name}", user_path(:id => f.user_id) %> </li>
        <% end %>
      <% end %>
    </ul>
</section>
<div class=" col-1-3 clearfix" > 
  <% if @posts%>
    <h2>Posts</h2>
      <ul>

          <% @posts.each do |p| %>
            <li><%= p.description %></li>
          <% end %>

      </ul>
  <% end %>

</div>