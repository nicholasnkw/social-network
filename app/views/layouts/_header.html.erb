<header>
  <div id="logo"><%=link_to current_user do %> 
    <i class="fa fa-home fa-2x"></i>
    <% end %>
  </div>
  <% if user_signed_in? %>
  <div class="dropdown">
    <% if @pending_friends.size > 0 %>
      <%= render  "layouts/notifications" %>
    <% end %>
  </div>
  <nav class="nav">
    <ul>
      <li><%= link_to  users_path do %>
        <i class="fa fa-users fa-2x"></i>
      <% end %> </li>
      <li><%= link_to posts_path do %>
        <i class="fa fa-rss-square fa-2x"></i>
        <% end %></li>
      <li><%= render  "layouts/notifications" %></li>
      <li><%= link_to destroy_session_path(current_user), :method => :delete  do %>
        <i class="fa fa-sign-out fa-2x"></i>
        <% end %></li>
    </ul>
  </nav>   
  <% end %>
</header>