<button type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
  <i class="fa fa-bell fa-2x"></i>
</button>
<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
  <% @pending_friends.each do |p| %>
  <li role="presentation"><b><%= gravatar_for(p, 20) %><%= p.profile.first_name %>&nbsp<%= p.profile.last_name %></b><%= link_to "Confirm", user_friend_path( :user_id => current_user, :friend_id => p), :method => :put, :class => "accept" %><%= link_to "Deny", user_friend_path( :user_id => current_user.id, :friend_id => p), :method => :delete, :class => "deny" %></li>
  <% end %> 
</ul>
