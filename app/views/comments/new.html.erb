<div class="column-main">
  <div class="column-main-content">
    <h1> Comment for:</h1>
    <%= form_for @comment, :url => comments_path(:commentable_type => params[:commentable_type], :commentable_id => params[:commentable_id], :author_id => current_user.id) do |f| %>
    <%= render 'shared/error_messages', f: @comment %>
      <div class="field">
        <%= f.text_area :content, :size => "50x2" %>
      </div>

     
      <div>
        <%= f.submit %>
      </div>
      <% end %>
  </div>
</div>
