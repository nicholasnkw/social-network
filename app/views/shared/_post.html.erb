<% @posts.each do |p| %>
  <div class="post_container">
    <p><%= link_to "#{p.author.profile.first_name} #{p.author.profile.last_name}", user_path(:id => p.author_id) %> says:</p>
    <div class="post_content">
      <%= p.description %>
    </div>
    <div class="tools">
      <% if current_user.likes?(p) %>
        <%= link_to "Unlike", like_path(:liked_id => p.id), :method => :delete %>
      <% else %>
        <%= link_to "like", likes_path(:post_id => p.id), :action => :create, :method => :post %>
      <% end %>  
    </div>  
  </div>
<% end %>
